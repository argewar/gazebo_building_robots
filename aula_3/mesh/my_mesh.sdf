    <!-- sua malha -->
    <model name="my_mesh">
      <pose>0 0 0 0 0 0</pose>
      <static>true</static>
      <link name="body">
        <visual name="visual">
          <!-- Se sua malha for Y-up (como o duck.dae), descomente a linha de pose: -->
          <!-- <pose>0 0 0 1.5708 0 0</pose>  roll=+90°  -->
          <geometry>
            <mesh>
              <!-- como está na MESMA pasta, use caminho relativo: -->
              <uri>file://my_mesh.dae</uri>
              <!-- (opcional) <scale>1 1 1</scale> -->
            </mesh>
          </geometry>
        </visual>
      </link>
    </model>

  </world>
</sdf>
